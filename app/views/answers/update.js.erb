$('#answer-' + <%= @answer.id %>).find('.answer-errors').html('<%= render 'shared/errors', resource: @answer %>');

<% unless @answer.errors.present? %>
  $('.flash').html('<%= j render 'shared/flash' %>');
  $('.answers-list').html('<%= j render @answers %>');

  <% if @answer.links.exists? %>
    location.reload();
  <% end %>
<% end %>
