$('.new-answer').find('.answer-errors').html('<%= render 'shared/errors', resource: @answer %>');

<% if @answer.persisted? %>
  $('.flash').html('<%= j render 'shared/flash' %>');
  $('.answers-list').append('<%= j render @answer %>');
  $('.new-answer #answer_body').val('');

  <% if @answer.links.exists? %>
    location.reload();
  <% end %>
<% end %>
